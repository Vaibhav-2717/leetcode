class Solution {
    public List<Integer> preorderTraversal(TreeNode root) {
        List<Integer> l = new ArrayList<>();
        if(root == null)
            return l;
        preorder(root,l);
        
        return l;
    }
    private void preorder(TreeNode root,List<Integer> l){
        if(root!=null)
            l.add(root.val);
        if(root.left != null)
            preorder(root.left,l);
        if(root.right != null)
            preorder(root.right,l);
    }
}
